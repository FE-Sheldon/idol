/* pages/uploadResult.wxss */

.uploadResult-page .uploadResult-page-header {
  width: 100%;
  height: 127rpx;
  background: #3b3c42;
  z-index: 9999;
}

.uploadResult-page .upload-success .upload-success-img-box {
  width: 538rpx;
  margin: 0 auto;
  margin-top: 69rpx;
}

.uploadResult-page .upload-success .text-1 {
  text-align: center;
  margin-top: 20rpx;
}

.uploadResult-page .upload-success .text-1 text {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.uploadResult-page .upload-success .btn {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  margin-top: 80rpx;
}

.uploadResult-page .upload-success .btn .return-index-page,
.uploadResult-page .upload-success .btn .continue-upload {
  width: 320rpx;
  height: 90rpx;
  background: rgba(56, 191, 123, 1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  color: rgba(249, 249, 249, 1);
}

.uploadResult-page .network-bad .network-bad-img-box {
  width: 160rpx;
  margin: 0 auto;
  margin-bottom: 17rpx;
  margin-top: 181rpx;
}

.uploadResult-page .network-bad .text {
  text-align: center;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
}

.uploadResult-page .network-bad .btn {
  width: 400rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 46rpx;
  background: rgba(56, 191, 123, 1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  color: rgba(255, 255, 255, 1);
}
