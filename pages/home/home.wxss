/* 弹窗样式 */

.dx-motal {
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dx-motal .motal-container {
  /* background: url('https://idols.heywoodsminiprogram.com/images/ruleBg.png') no-repeat; *//* background-size: 100%; */
  width: 600rpx;
  border-radius: 16rpx;
  z-index: 1000;
  position: relative;
  background: #fff;
}

.dx-motal .motal-container .topImg {
  width: 600rpx;
}

.dx-motal .motal-container .text {
  z-index: 999;
  margin: 0 35rpx 0 37rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
  color: rgba(40, 40, 40, 1);
  line-height: 46rpx;
}

.dx-motal .motal-container .btn {
  width: 540rpx;
  height: 100rpx;
  background: rgba(247, 77, 113, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 69rpx;
  margin-bottom: 30rpx;
}

.dx-motal .motal-container .btn text {
  font-size: 38rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.foot-text {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
}

.foot-text text {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(56, 191, 123, 1);
}

.guide-collect {
  position: fixed;
  width: 284rpx;
  height: 101rpx;
  top: 122rpx;
  right: 10rpx;
  z-index: 9999;
}

.guide-collect image {
  width: 100%;
  height: 100%;
}

.guide-collect-animationList {
  animation: guide-collect-animationList 0.4s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}

@keyframes guide-collect-animationList {
  0% {
    transform: translate(0px, 0px);
  }

  25% {
    transform: translate(0px, -6rpx);
  }

  100% {
    transform: translate(0px, 0rpx);
  }
}

